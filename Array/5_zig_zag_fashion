    void zigZag(vector<int> &arr) {
        bool flag=false;
        for(int i=0;i<arr.size()-1;i++){
        if(flag){
            if(arr[i]<arr[i+1]) swap(arr[i],arr[i+1]);
        }
        else{
            if(arr[i]>arr[i+1]) swap(arr[i],arr[i+1]);
        }
                flag=!flag;
    }
        
    }